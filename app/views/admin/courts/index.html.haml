- model_class = Court.new.class
.page-header
  %h1 Canchas del Club #{@club.name}
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:sport_id)
      %th= :created_at

  %tbody
    - @courts.each do |court|
      %tr
        %td= link_to court.id, admin_club_court_path(id: court.id, club_id: court.club.id)
        %td= court.sport.name
        %td=l court.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_club_court_path(id: court.id, club_id: court.club.id), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_club_court_path(id: court.id, club_id: court.club.id), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_club_court_path(@club.id), :class => 'btn btn-primary'
