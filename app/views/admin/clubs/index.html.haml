- model_class = Club.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:department_id)
      %th= model_class.human_attribute_name(:address)
      %th= model_class.human_attribute_name(:phone_number)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")


  %tbody
    - @clubs.each do |club|
      %tr
        %td= link_to club.id, admin_club_path(club)
        %td= club.name
        %td= club.department_id
        %td= club.address
        %td= club.phone_number
        %td=l club.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_club_path(club), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_club_path(club), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'
          = link_to 'Canchas', admin_club_courts_path(club), :class => 'btn btn-mini'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_club_path, :class => 'btn btn-primary'
